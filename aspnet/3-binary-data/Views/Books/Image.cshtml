@model GoogleCloudSamples.Models.ImageResponse

<h3>Image Text</h3>

@if (Model != null)
{
    if (string.IsNullOrWhiteSpace(Model.Url))
    {
        <p class="text-muted">No image.</p>
    }
    else
    {
        <p>
            <img src="@Model.Url" />
        </p>
    }
    if (Model.Response == null)
    {
        <p class="text-muted">No response.</p>
    }
    else if (Model.Response.TextAnnotations == null
        || Model.Response.TextAnnotations.Count == 0)
    {
        <p class="text-muted">No text.</p>
    }
    else
    {
        foreach (var textAnnotation in Model.Response.TextAnnotations)
        {
                <p>
                    @textAnnotation.Description
                </p>
        }

    }
}
